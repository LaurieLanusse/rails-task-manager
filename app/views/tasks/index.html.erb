<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <% if task.completed == true %>
  <li><%= link_to "[X] #{task.title}", task_path(task.id) %> <%= link_to 'delete', task_path(task),
method: :delete,
data: { confirm: "Are you sure?"} %></li>
  <%else %>
  <li><%= link_to "[] #{task.title}", task_path(task.id) %> <%= link_to 'delete', task_path(task),
method: :delete,
data: { confirm: "Are you sure?"} %></li>
  <% end %>
  <% end %>
</ul>

<%= link_to "Add task", new_task_path %>
